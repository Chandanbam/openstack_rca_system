# OpenStack RCA System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===============================================
# REQUIRED CREDENTIALS
# ===============================================

# Anthropic API Key (Required for RCA analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===============================================
# DOCKER REGISTRY (Optional - for building/deploying)
# ===============================================

# DockerHub credentials for building and pushing images
DOCKER_USERNAME=chandantech
DOCKER_PASSWORD=your_docker_password_here
DOCKER_REGISTRY=docker.io
DOCKER_REPOSITORY=openstack-rca-system

# ===============================================
# MLFLOW CONFIGURATION (Optional)
# ===============================================

# MLflow tracking server
MLFLOW_TRACKING_URI=https://your-mlflow-server.com

# S3 artifact storage
MLFLOW_ARTIFACT_ROOT=s3://your-bucket/mlflow-artifacts
MLFLOW_S3_ENDPOINT_URL=https://s3.your-region.amazonaws.com

# Enable MLflow integration
MLFLOW_ENABLED=true

# ===============================================
# AWS CONFIGURATION (Optional - for S3 storage)
# ===============================================

# AWS credentials for S3 model storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=your-aws-region

# ===============================================
# APPLICATION SETTINGS
# ===============================================

# Deployment port
CONTAINER_PORT=7051

# Debug mode
DEBUG=false

# Environment (development, staging, production)
ENVIRONMENT=development 