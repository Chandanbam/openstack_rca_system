# OpenStack RCA System Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: AI API Configuration
# =============================================================================

# Anthropic API key (Required for RCA analysis)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# OPTIONAL: MLflow Configuration
# =============================================================================

# MLflow tracking server URL (Optional)
# Example: http://localhost:5000 or https://mlflow.yourdomain.com
MLFLOW_TRACKING_URI=

# MLflow artifact storage (S3) (Optional)
# Example: s3://your-bucket/mlflow-artifacts
MLFLOW_ARTIFACT_ROOT=

# S3 endpoint for MLflow (Optional)
# Example: http://localhost:9000 or https://s3.yourdomain.com
MLFLOW_S3_ENDPOINT_URL=

# =============================================================================
# OPTIONAL: AWS Configuration (Required if using MLflow + S3)
# =============================================================================

# AWS access key ID (Optional)
# Required if using MLflow with S3 storage
AWS_ACCESS_KEY_ID=

# AWS secret access key (Optional)
# Required if using MLflow with S3 storage
AWS_SECRET_ACCESS_KEY=

# AWS default region (Optional)
# Example: us-east-1, eu-west-1, ap-southeast-1
AWS_DEFAULT_REGION=

# =============================================================================
# OPTIONAL: Streamlit Configuration
# =============================================================================

# Streamlit server port (Default: 7051)
STREAMLIT_SERVER_PORT=7051

# Streamlit server address (Default: 0.0.0.0)
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Run Streamlit in headless mode (Default: true)
STREAMLIT_SERVER_HEADLESS=true

# Disable Streamlit usage statistics (Default: false)
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# OPTIONAL: Application Configuration
# =============================================================================

# Python path (Default: /app)
PYTHONPATH=/app

# NLTK data directory (Default: /app/nltk_data)
NLTK_DATA=/app/nltk_data

# =============================================================================
# OPTIONAL: Telemetry Configuration
# =============================================================================

# Disable ChromaDB telemetry (Default: False)
ANONYMIZED_TELEMETRY=False

# Disable ChromaDB telemetry (Default: False)
CHROMA_TELEMETRY_ENABLED=False

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env:
#    cp env.template .env
#
# 2. Edit .env with your actual values:
#    nano .env
#
# 3. Use with Docker:
#    docker run --env-file .env openstack-rca-system:latest
#
# 4. Use with Docker Compose:
#    docker-compose up
#
# 5. For CI/CD, set these as GitHub Secrets:
#    - ANTHROPIC_API_KEY
#    - MLFLOW_TRACKING_URI
#    - AWS_ACCESS_KEY_ID
#    - AWS_SECRET_ACCESS_KEY
#    - AWS_DEFAULT_REGION
#
